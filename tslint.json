{
  "extends": [
    "tslint-config-standard"
  ],
  "rules": {
    "semicolon": [
      true,
      "always"
    ],
    "await-promise": [true, "Bluebird"],
    "file-name-casing": [true, {".tsx": "pascal-case", ".ts": "camel-case"}],
    "space-before-function-paren": [
      false
    ],
    "ter-indent": [
      false
    ],
    "no-inferrable-types":true,
    "strict-type-predicates": false,
    "indent": [
      true,
      "spaces",
      2
    ]
  }
}