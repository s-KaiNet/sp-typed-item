{
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1000,
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "lib": true
    },
    "editor.codeActionsOnSave": {
        "source.fixAll.tslint": true
    },
    "editor.wordWrap": "on",
    "json.schemas": [
        {
            "fileMatch": [
                "/config/sp-typed-item.config.json"
            ],
            "url": "./schemas/sp-typed-item.schema.json"
        }
    ]
}